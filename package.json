{
  "name": "leelo",
  "version": "1.0.0",
  "description": "A self-hosted read-it-later PWA with unified backend and frontend",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npm run db:setup && npm run build:client && concurrently \"npm run dev:server\" \"npm run watch:client\"",
    "dev:server": "tsx watch src/server/server.ts",
    "watch:client": "vite build --watch",
    "build": "npm run build:client && npm run build:server",
    "build:client": "tsc -p tsconfig.client.json && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "NODE_ENV=production node dist/server.js",
    "db:setup": "cp .env.example .env 2>/dev/null || true && npx prisma generate && npx prisma migrate dev",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "echo \"No tests specified\" && exit 0",
    "generate-favicons": "node scripts/generate-favicons.js"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/multipart": "^8.3.0",
    "@fastify/static": "^7.0.4",
    "@mozilla/readability": "^0.6.0",
    "@prisma/client": "^5.19.1",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.1",
    "@simplewebauthn/browser": "^13.1.2",
    "@simplewebauthn/server": "^13.1.2",
    "@tanstack/react-query": "^5.51.23",
    "@types/nodemailer": "^6.4.17",
    "bcrypt": "^5.1.1",
    "better-queue": "^3.8.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fastify": "^4.28.1",
    "helmet": "^7.2.0",
    "jsdom": "^24.1.1",
    "lucide-react": "^0.427.0",
    "minidenticons": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.5",
    "openid-client": "^5.6.5",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "sharp": "^0.34.3",
    "sonner": "^2.0.7",
    "speakeasy": "^2.0.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-queue": "^3.8.6",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.5.4",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/speakeasy": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "postcss": "^8.4.41",
    "prisma": "^5.19.1",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "vite": "^7.1.1",
    "vite-plugin-pwa": "^1.0.2"
  }
}
